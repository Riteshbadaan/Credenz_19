<!--            android:adjustViewBounds="true"-->
<!--            android:alpha="0.1"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:src="@drawable/clogo"/>-->
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>